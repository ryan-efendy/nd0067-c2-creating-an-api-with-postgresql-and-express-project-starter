{
    "compilerOptions": {
        "target": "ES2020",
        "module": "commonjs",
        "lib": ["es2015", "dom"],
        "rootDir": "./src",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "sourceMap": true,
        "outDir": "./dist",
        "moduleResolution": "node"
    }
}
